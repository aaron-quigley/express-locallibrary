extends layout 

block content 
    h1 Title: #{title}

    if allBooksWithGenre.length 
        p #[strong.text-danger Delete the following book instances using this genre before attempting to delete the genre.]
        div(style="margin-left:20px;margin-top:20px")
            h4 Books 
            dl 
                each book in allBooksWithGenre
                    dt
                        a(href=book.url) #{book.title}
                    dd #{book.summary}
    else 
        p Do you really want to delete this genre?

        form(method="POST")
            div.form-group
                input#genreid.form-control(type="hidden", name="genreid", value=genre._id)
            
            button.btn.btn-primary(type="submit") Delete